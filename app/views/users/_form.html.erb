
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>

    <% user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>

  <% end %>


<div class="container field col-lg-4 col-md-5 col-11 mb-4 userform">
  <div class="form-row justify-content-center">
    <h2>Edit Profile</h2>
  </div>
    <div class="form-row justify-content-center">
      <div class="avatar-circle">
        <span class="initials align-self-center"><%= user.firstname[0,1] %><%= user.lastname[0,1]  %></span>
      </div>
    </div>


    <div class="col-12">
      <%= form.label :firstname, "First Name", class: 'category' %>
      <%= form.text_field :firstname, id: :user_firstname, placeholder: "First Name", class: 'form-control', autofocus: true %>
    </div>

    <div class= "col-12">
      <%= form.label :lastname, "Last Name" %>
      <%= form.text_field :lastname, id: :user_lastname, placeholder: "Last Name", class: 'form-control' %>
    </div>

    <div class="col-12">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username, placeholder: 'Username (max 12)', class: 'form-control'%>
    </div>

    <div class="col-12">
      <%= form.label :email %>
      <%= form.email_field :email, id: :user_email, class: 'form-control' %>
    </div>

    <div class="col-12">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password_digest, class: 'form-control'%>
    </div>

  <div class="form-row mt-3">
    <div class="actions m-auto">
      <%= form.submit 'Update Profile', class: 'btn submitbutton' %>
    </div>
  </div>

  <% end %>

</div>
