<% flash.each do |key, value| %>
    <div class="row col-12 alert alert-warning alert-dismissible fade show" id="mainalert" role="alert" style="z-index: 3;">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
        <strong><%= value %></strong>
    </div>
  <% end %>

<h1>Actives</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Status</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actives.each do |active| %>
      <tr>
        <td><%= active.user.username %></td>
        <td><%= active.event.title %></td>
        <td><%= active.status %></td>
        <td><%= active.obs %></td>
        <td><%= link_to 'Show', active %></td>
        <td><%= link_to 'Delete', active, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

